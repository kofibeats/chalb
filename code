with_fx :reverb do
  
  live_loop :snare do
    12. times do
      sample :drum_snare_soft, amp: 2
      sleep 2
    end
    stop
  end
  
  live_loop :kick do
    16. times do
      sample :drum_heavy_kick, amp: 2
      sleep 1
    end
    stop
  end
  
  live_loop :hat do
    16. times do
      sample :drum_cymbal_closed
      sleep 0.5
    end
    stop
  end
  
  sleep 24
  
  live_loop :splash do
    4. times do
      sample :drum_splash_hard
      sleep 2
    end
    stop
  end
  
  live_loop :ride do
    16. times do
      sample :drum_cymbal_hard
      sleep 0.5
    end
    stop
  end
  
  sleep 8
  
  live_loop :snare2 do
    4. times do
      sample :drum_snare_soft, amp: 2
      sleep 2
    end
    stop
  end
  
  live_loop :kick2 do
    8. times do
      sample :drum_heavy_kick, amp: 2
      sleep 1
    end
    stop
  end
  
  live_loop :hat2 do
    16. times do
      sample :drum_cymbal_closed
      sleep 0.5
    end
    stop
  end
  
end
